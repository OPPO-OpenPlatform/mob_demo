<?xml version="1.0" encoding="utf-8"?>
<com.heytap.msp.mobad.api.params.ContentContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_item_padding">

        <TextView
            android:id="@+id/item_content_txt_title"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title" />

        <TextView
            android:id="@+id/item_content_txt_content"
            style="@style/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_content_txt_title"
            android:layout_marginTop="10dp"
            android:text="content" />


        <TextView
            android:id="@+id/item_content_txt_tag"
            style="@style/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_content_txt_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp" />

    </RelativeLayout>
</com.heytap.msp.mobad.api.params.ContentContainer>
