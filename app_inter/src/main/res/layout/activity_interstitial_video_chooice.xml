<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:id="@+id/inter_vertical_posid_et"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:hint="@string/inter_hint_txt"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/inter_vertical_bn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onBnClick"
            android:text="@string/inter_video_vertical_bn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:id="@+id/inter_horizontal_posid_et"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:hint="@string/inter_hint_txt"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/inter_horizontal_bn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onBnClick"
            android:text="@string/inter_video_horizontal_bn" />
    </LinearLayout>

</LinearLayout>
