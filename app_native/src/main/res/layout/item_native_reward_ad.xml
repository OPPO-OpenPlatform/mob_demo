<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ad_container"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/opos_native_512_512_bg_img"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/icon_iv"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="9"
            android:singleLine="true"
            android:textColor="@color/title_color"
            android:textSize="@dimen/title_size" />

        <TextView
            android:id="@+id/desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_tv"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/icon_iv"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="13"
            android:singleLine="true"
            android:textColor="@color/desc_color"
            android:textSize="@dimen/desc_size" />

        <Button
            android:id="@+id/action_bn"
            android:layout_width="67dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="27dp"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:textColor="@color/action_bn_text_color"
            android:textSize="@dimen/action_bn_size" />

        <TextView
            android:id="@+id/reward_tv"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_bn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="27dp"
            android:gravity="center"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/action_bn_size" />

        <ImageView
            android:id="@+id/logo_iv"
            android:layout_width="28dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</RelativeLayout>
