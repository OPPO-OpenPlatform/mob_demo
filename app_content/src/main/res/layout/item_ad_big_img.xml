<?xml version="1.0" encoding="utf-8"?>
<com.heytap.msp.mobad.api.params.ContentContainer xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_ad_big_img_title"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="title" />

        <ImageView
            android:id="@+id/item_ad_big_img_pic"
            android:layout_width="330dp"
            android:layout_height="186dp"
            android:layout_below="@id/item_ad_big_img_title"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/item_ad_big_img_btn"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_below="@id/item_ad_big_img_pic"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_radius"
            android:gravity="center"
            android:text="立即下载"
            android:textColor="#3E53F1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_ad_big_img_tag"
            style="@style/tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_ad_big_img_pic"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/item_ad_big_img_btn" />

    </RelativeLayout>
</com.heytap.msp.mobad.api.params.ContentContainer>