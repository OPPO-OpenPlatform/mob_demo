<?xml version="1.0" encoding="utf-8"?>
<com.heytap.msp.mobad.api.params.ContentContainer xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_ad_multi_img_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/title"
            android:text="title" />

        <LinearLayout
            android:id="@+id/item_ad_multi_img_pic_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_ad_multi_img_title"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_ad_multi_img_pic_1"
                android:layout_width="110dp"
                android:layout_height="71dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/item_ad_multi_img_pic_2"
                android:layout_width="110dp"
                android:layout_height="71dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/item_ad_multi_img_pic_3"
                android:layout_width="110dp"
                android:layout_height="71dp"
                android:scaleType="fitXY" />

        </LinearLayout>


        <TextView
            android:id="@+id/item_ad_multi_img_btn"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_below="@id/item_ad_multi_img_pic_container"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_radius"
            android:text="立即下载"
            android:gravity="center"
            android:textColor="#3E53F1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_ad_multi_img_tag"
            style="@style/tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_ad_multi_img_pic_container"
            android:layout_toLeftOf="@id/item_ad_multi_img_btn"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</com.heytap.msp.mobad.api.params.ContentContainer>
